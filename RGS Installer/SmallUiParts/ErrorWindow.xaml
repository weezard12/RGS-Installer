<Window
    x:Class="RGS_Installer.SmallUiParts.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RGS_Installer.SmallUiParts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ErrorWindow"
    Width="600"
    Height="300"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0.1" Color="#D8B5FF" />
                <GradientStop Offset="1" Color=" #1EAE98" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                HorizontalAlignment="Center"
                Content="An Error Accured"
                FontSize="20">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="3" />
                </Label.Effect>
            </Label>
            <Label
                x:Name="ErrorDescription"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Content="No Error Context"
                FontSize="16" />
            <Button
                Grid.Row="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Click="OK_Click"
                Content="OK" />
        </Grid>
    </Border>

</Window>
