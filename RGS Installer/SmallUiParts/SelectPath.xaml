<UserControl x:Class="RGS_Installer.SmallUiParts.SelectPath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RGS_Installer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="FilePath" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Button x:Name="SelectPathButton" Grid.Column="1" Content="Browse" Click="SelectPath_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Margin="10,0,0,0"/>
    </Grid>
</UserControl>